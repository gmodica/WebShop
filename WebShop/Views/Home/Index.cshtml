@using WebShop.Models

@{
    ViewBag.Title = "Home Page";
}

@model HomeViewModel

<div class="jumbotron">
    <h1>Bookstore</h1>
    <p class="lead">Welcome to the bookstore. Start browsing our catalog of books</p>
    <p><a href="@Url.Action("Index","Catalog")" class="btn btn-primary btn-lg">Catalog &raquo;</a></p>
</div>

<h3>Today's Deals</h3>

<div class="row">
    @foreach(Product deal in Model.Deals)
    {
        <div class="col-md-4">
            <img class="product-minithumbnail" alt="@deal.Name" src="~/Content/products/@deal.Image" />
            <p><strong>@Html.DisplayFor(model => deal.Name)</strong> <small>@Html.DisplayFor(model => deal.Price)</small></p>            
            <p><a class="btn btn-default" href="@Url.Action("Product","Catalog", new { id = deal.Id})">Details &raquo;</a></p>
        </div>
    }
</div>